<!DOCTYPE html>
<html lang="en">
  <%- include('./templates/head'); -%>
  <body>
    <div class="wrapper">
      <%- include('./templates/sidenav'); -%>
      <!-- Overlay -->
      <div class="overlay"></div>
      <div class="content">
        <%- include('./templates/header') -%>
        <main>
          <!-- Containter -->
          <div class="container px-2 py-2" style="height: 100vh">
            <div class="row flex-lg-row align-items-center g-5 py-5">
              <div class="col-10 col-sm-8 col-lg-6">
                <img
                  src="/<%=product.imageUrl%>"
                  class="d-block mx-lg-auto img-fluid"
                  alt="<%=product.name%>"
                  width="700"
                  height="500"
                  loading="lazy"
                />
              </div>
              <div class="col-lg-6">
                <h1 class="display-4 fw-bolder lh-1 mb-3 text-wrap">
                  <%=product.name %>
                  <span class="fs-6 fw-light text-muted"
                    >by <%=product.brand.name%></span
                  >
                </h1>
                <p class="text-muted mb-3"></p>
                <p class="lead display-5 fw-bold">$ <%=product.price%></p>
                <p class="mt-3"><%=product.description%></p>
                <p class="text-muted mb-3">
                  <%=product.numberInStock%> remaining
                </p>

                <div class="d-grid gap-2 d-md-flex justify-content-md-start">
                  <button
                    type="button"
                    class="btn btn-warning btn-lg px-4 me-md-2"
                  >
                    Add to cart
                  </button>
                </div>
                <p class="mt-5">
                  <a
                    href="<%= product.url + '/delete'%>"
                    class="text-decoration-none btn btn-outline-danger btn-small"
                    >Delete Product</a
                  >
                </p>
              </div>
            </div>
          </div>
        </main>
        <%- include('./templates/footer') -%>
      </div>
    </div>
  </body>
</html>
