<!DOCTYPE html>
<html lang="en">
  <%- include('./templates/head'); -%>
  <body>
    <div class="wrapper">
      <%- include('./templates/sidenav'); -%>
      <!-- Overlay -->
      <div class="overlay"></div>
      <div class="content">
        <%- include('./templates/header') -%>
        <main>
          <!-- Containter -->
          <div class="album">
            <div class="container pb-5">
              <% if (category) { %>

              <div class="d-flex align-content-center justify-content-between">
                <h2 class="text-dark fw-bold py-2"><%= category.name %></h2>
                <% if(user) {%>

                <div>
                  <p>
                    <a href="<%= category.url + '/delete'%>" class="text-danger"
                      >Delete this category</a
                    >
                  </p>
                  <p>
                    <a href="<%= category.url + '/update'%>" class="text-info"
                      >Update this category</a
                    >
                  </p>
                </div>
                <% } %>
              </div>

              <% if(category_products.length > 0) {%>
              <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
                <% for (let product of category_products) {%> <%-
                include('templates/product_list_card', {product: product}); -%>
                <% } %> <% } else { %>
                <p>No Products found. Sorry, Try again.</p>
              </div>
              <% } %> <% } else { %>
              <p>No Category found. Sorry, Try again.</p>
              <% } %>
            </div>
          </div>
        </main>
        <%- include('./templates/footer') -%>
      </div>
    </div>
  </body>
</html>
