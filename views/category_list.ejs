<!DOCTYPE html>
<html lang="en">
  <%- include('./templates/head'); -%>
  <body>
    <div class="wrapper">
      <%- include('./templates/sidenav'); -%>
      <!-- Overlay -->
      <div class="overlay"></div>
      <div class="content">
        <%- include('./templates/header') -%>
        <main>
          <!-- Product list -->
          <div class="album bg-light">
            <!-- Container -->
            <div class="container pb-5">
              <%if(category_list.length > 0) {%>
              <div
                class="row row-cols-1 row-cols-lg-3 align-items-stretch g-4 py-5"
              >
                <% for (let category of category_list) { %> <%-
                include('templates/category_list_card', {category: category});
                -%> <% } %>
              </div>
              <% } else {%>
              <p>Sorry, no categories found. Try Again.</p>
              <%}%>
            </div>
          </div>
        </main>
        <%- include('./templates/footer') -%>
      </div>
    </div>
  </body>
</html>
