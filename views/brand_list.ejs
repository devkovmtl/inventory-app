<!DOCTYPE html>
<html lang="en">
  <%- include('./templates/head'); -%>
  <body>
    <div class="wrapper">
      <%- include('./templates/sidenav'); -%>
      <!-- Overlay -->
      <div class="overlay"></div>
      <div class="content">
        <%- include('./templates/header') -%>
        <main>
          <!-- Containter -->
          <div class="container px-2 py-2 h-100">
            <%if(brand_list.length > 0) { %>
            <ul class="list-group col-3 mx-auto">
              <%for (let brand of brand_list) {%>
              <li class="list-group-item">
                <a
                  href="<%=brand.url%>"
                  class="d-flex justify-content-between align-items-center text-decoration-none text-dark"
                >
                  <%= brand.name%>
                  <span class="badge bg-warning rounded-pill">></span>
                </a>
              </li>
              <% } %>
            </ul>
            <% } else{ %>
            <p>Sorry no brands found. Please try again.</p>
            <% } %>
          </div>
        </main>
        <%- include('./templates/footer') -%>
      </div>
    </div>
  </body>
</html>
